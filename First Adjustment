# include <iostream>
# include <string>
using namespace std;

   void interface(){
   	  cout<<"-------------------------------------------------------"<<endl;
	  cout<<"|                 Welcome to our ticket               |"<<endl;
	  cout<<"|                 concert registration                |"<<endl;
	  cout<<"|                                                     |"<<endl;
	  cout<<"|                  Please follow all the              |"<<endl;
	  cout<<"|                  instruction provided               |"<<endl;
	  cout<<"|                       Thanks you !                  |"<<endl;
	  cout<<"|                                                     |"<<endl;
	  cout<<"-------------------------------------------------------"<<endl;
   }

   int main(){
   	
   	   // Declaration of variable
	   string name, address;
	   int phoneNum, age;  
   	   char cont;
   	   
   	   // Function call
       interface();
       
	   // Loops to continue or not
	   do{
       // Input for user information
       cout<<"Enter your name: "<<endl;
       getline(cin,name);
       cout<<"Enter your age: "<<endl;
       cin>>age;
       cout<<"Enter your phone number: "<<endl;
       cin>>phoneNum;
       
	   cout<<"Do you want to continue? (Y/N)";
	   cin>>cont;
	   cin.ignore();
	  }   while(cont == 'Y' || cont == 'y'); 
	   
       
